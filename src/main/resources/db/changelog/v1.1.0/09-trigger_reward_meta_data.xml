<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd"
        objectQuotingStrategy="QUOTE_ONLY_RESERVED_WORDS">

    <changeSet id="09-01-trigger_reward_meta_data-table" author="wout">
        <createTable tableName="trigger_reward_meta_data">
            <column name="name" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_trigger_reward_meta_data"/>
            </column>

            <column name="value" type="VARCHAR(255)">
                <constraints nullable="false" primaryKey="true" primaryKeyName="pk_trigger_reward_meta_data"/>
            </column>

            <column name="trigger_id" type="VARCHAR(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet id="09-02-trigger_reward_meta_data-relations" author="wout">
        <addForeignKeyConstraint baseTableName="trigger_reward_meta_data" baseColumnNames="trigger_id"
                                 constraintName="fk_trigger_reward_meta_data_triggers"
                                 referencedTableName="triggers" referencedColumnNames="id" />
    </changeSet>

    <changeSet id="09-03-trigger_reward_meta_data-data" author="wout" context="load-data">
        <loadData tableName="trigger_reward_meta_data" file="db/data/trigger_reward_meta_data.csv" separator=";">
            <column name="name" type="string"/>
            <column name="value" type="string"/>
            <column name="trigger_id" type="string"/>
        </loadData>
    </changeSet>

</databaseChangeLog>